{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./cli/dist",
    "rootDir": "./cli",
    "types": ["node"],
    "moduleDetection": "force"
  },
  "include": [
    "cli/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "cli/dist"
  ],
  "ts-node": {
    "esm": false,
    "experimentalSpecifierResolution": true
  }
}
