{
  "name": "@fleettools/squawk",
  "version": "0.2.0",
  "description": "FleetTools Squawk - Agent Coordination System",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "squawk": "dist/bin.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./recovery": {
      "types": "./dist/recovery/index.d.ts",
      "import": "./dist/recovery/index.js"
    }
  },
  "scripts": {
    "start": "bun dist/bin.js",
    "build": "bun build src/index.ts --outdir dist --target bun --format esm && bun build src/bin.ts --outdir dist --target bun --format esm --minify",
    "dev": "bun src/bin.ts",
    "lint": "echo 'No linter configured'"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20.10.6",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
