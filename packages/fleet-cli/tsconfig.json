{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": "../..",
    "paths": {
      "@fleettools/*": ["packages/*/src", "squawk/src"],
      "@fleettools/fleet-shared": ["packages/fleet-shared/src"],
      "@fleettools/core": ["packages/core/src"],
      "@fleettools/db": ["packages/db/src"],
      "@fleettools/events": ["packages/events/src"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}