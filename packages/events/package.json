{
  "name": "@fleettools/events",
  "version": "0.1.1",
  "description": "Event types and validation for FleetTools",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun --format esm && bun run build:types",
    "build:types": "tsc --emitDeclarationOnly",
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage"
  },
  "dependencies": {
    "zod": "^3.22.0",
    "@fleettools/core": "workspace:*",
    "@fleettools/db": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "@types/bun": "^1.3.5"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  }
}
