{
  "name": "fleettools-opencode",
  "version": "0.1.0",
  "description": "FleetTools plugin for OpenCode - /fleet commands",
  "opencode": {
    "displayName": "FleetTools",
    "commands": [
      {
        "id": "fleet-status",
        "name": "/fleet status",
        "description": "Show FleetTools status and configuration"
      },
      {
        "id": "fleet-setup",
        "name": "/fleet setup",
        "description": "Initialize FleetTools configuration"
      },
      {
        "id": "fleet-doctor",
